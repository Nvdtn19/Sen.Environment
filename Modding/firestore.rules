rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if request.resource.data.lastRequestTime <= timestamp.now() - duration.value(30, "s");
      allow write: if request.auth != null && request.resource.data.lastRequestTime <= timestamp.now() - duration.value(30, "s") && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.lastRequestTime <= timestamp.now() - duration.value(30, "s");
    }
  }
}
